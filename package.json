{
  "name": "reference-grouper",
  "displayName": "Reference Grouper",
  "description": "Groups references in the references view by Read/Write operations",
  "version": "0.5.0",
  "publisher": "anhkhoatranle30",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/anhkhoatranle30/VSCode-Reference-Grouper-extension"
  },
  "author": "anhkhoatranle30",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anhkhoatranle30/VSCode-Reference-Grouper-extension/issues"
  },
  "homepage": "https://github.com/anhkhoatranle30/VSCode-Reference-Grouper-extension#readme",
  "keywords": [
    "references",
    "read",
    "write",
    "grouping",
    "code-analysis"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "referenceGrouper",
          "title": "Grouped References",
          "icon": "$(references)"
        }
      ]
    },
    "views": {
      "referenceGrouper": [
        {
          "id": "referenceGrouper.referencesView",
          "name": "References"
        }
      ]
    },
    "commands": [
      {
        "command": "referenceGrouper.findAllReferences",
        "title": "Find All References (Grouped)",
        "category": "Reference Grouper"
      },
      {
        "command": "referenceGrouper.openReference",
        "title": "Open Reference"
      },
      {
        "command": "referenceGrouper.toggleGroupByFile",
        "title": "Toggle Group By File",
        "category": "Reference Grouper",
        "icon": "$(folder)"
      },
      {
        "command": "referenceGrouper.toggleShowFullPath",
        "title": "Toggle Show Full Path",
        "category": "Reference Grouper",
        "icon": "$(whole-word)"
      }
    ],
    "keybindings": [
      {
        "command": "referenceGrouper.findAllReferences",
        "key": "shift+alt+f12",
        "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "referenceGrouper.toggleGroupByFile",
          "when": "view == referenceGrouper.referencesView",
          "group": "navigation@1"
        },
        {
          "command": "referenceGrouper.toggleShowFullPath",
          "when": "view == referenceGrouper.referencesView",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "referenceGrouper.findAllReferences",
          "when": "editorHasReferenceProvider",
          "group": "4_search@1.5"
        }
      ],
      "commandPalette": [
        {
          "command": "referenceGrouper.findAllReferences",
          "when": "editorHasReferenceProvider"
        }
      ]
    },
    "configuration": {
      "title": "Reference Grouper",
      "properties": {
        "referenceGrouper.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable reference grouping by read/write operations"
        },
        "referenceGrouper.showCounts": {
          "type": "boolean",
          "default": true,
          "description": "Show count of references in each group"
        },
        "referenceGrouper.groupByFile": {
          "type": "boolean",
          "default": false,
          "description": "Group references by file within Writes/Reads groups"
        },
        "referenceGrouper.showFullPath": {
          "type": "boolean",
          "default": false,
          "description": "Show full file path instead of just filename when grouping by file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
